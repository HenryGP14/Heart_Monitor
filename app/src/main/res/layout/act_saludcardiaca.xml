<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dpPaddingContainer"
    tools:context=".SaludCardiacaActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/btnAtras_actSaludCar"
            android:layout_width="26dp"
            android:layout_height="26dp"
            app:srcCompat="@drawable/ic_atras"
            android:onClick="btnAtras"/>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgHeartRate_actSaludCar"
                android:layout_width="26dp"
                android:layout_height="26dp"
                app:srcCompat="@drawable/ic_pulso" />

            <TextView
                android:id="@+id/txtTitulo_actSaludCar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Salud cardiaca"
                android:textAlignment="center"
                android:textSize="@dimen/spNivel1" />
        </LinearLayout>

        <ImageView
            android:id="@+id/btnConfiguracionSC_actSaludCar"
            android:layout_width="26dp"
            android:layout_height="26dp"
            app:srcCompat="@drawable/ic_settings"
            android:onClick="btnConfiguracion"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="@dimen/dpSizeIcon"
            android:layout_height="@dimen/dpSizeIcon"
            app:srcCompat="@drawable/ic_cuenta" />

        <TextView
            android:id="@+id/txtNombresApellidos_actSaludCar"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="Darlyn Buenaño Vera"
            android:textSize="@dimen/spNivel2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dpMarginTop">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal|center_vertical">

            <ImageButton
                android:id="@+id/btnDiaAnterior"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/app_button"
                android:src="@drawable/ic_atras"
                android:onClick="btnDiaAnterior"/>

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/spNivel2"
                android:text="18 - 08 - 2021"
                android:layout_marginLeft="@dimen/dpMarginLR"
                android:layout_marginRight="@dimen/dpMarginLR"
                android:textAlignment="center" />

            <ImageButton
                android:id="@+id/btnDiaSiguiente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/app_button"
                android:src="@drawable/ic_siguiente"
                android:onClick="btnDiaSiguiente"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dpMarginTop"
            android:gravity="center|top"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:layout_weight="1"
                app:cardBackgroundColor="#07559c"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Ultima medición"
                        android:textSize="@dimen/spNivel2"/>

                    <TextView
                        android:id="@+id/txtUltMed_actSaludCar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="97 BPM"
                        android:textSize="28sp" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"
                app:cardBackgroundColor="#07559c"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Promedio frecuencia cardiaca"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/txtPromFreCar_actSaludCar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="89 BPM"
                        android:textSize="28sp" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center|top"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:layout_weight="1"
                app:cardBackgroundColor="#07559c"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Frecuencia cardiaca mínima"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/txtFreCarMin_actSaludCar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="97 BPM"
                        android:textSize="28sp" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"
                app:cardBackgroundColor="#07559c"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Promedio frecuencia máxima"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/txtProFreCarMax_actSaludCar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="89 BPM"
                        android:textSize="28sp" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>