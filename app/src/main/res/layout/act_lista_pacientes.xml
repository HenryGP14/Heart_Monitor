<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dpPaddingContainer"
    android:orientation="vertical"
    tools:context=".ListaPacientesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/dpMarginBottom">

        <ImageButton
            android:layout_width="@dimen/dpSizeIcon"
            android:layout_height="@dimen/dpSizeIcon"
            android:backgroundTint="@color/app_background"
            android:src="@drawable/ic_atras"
            android:onClick="btnIrAtras_actListaPaci"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/dpSizeIcon"
                android:layout_height="@dimen/dpSizeIcon"
                android:src="@drawable/ic_settings" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="Configuración"
                android:textSize="@dimen/spNivel1" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dpPaddingItem"
        android:padding="@dimen/dpPaddingItem"
        android:background="@color/app_item"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/dpSizeImg"
            android:layout_height="@dimen/dpSizeImg"
            android:src="@drawable/user"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dpPaddingItem"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingTop="@dimen/dpPaddingSubItem"
                android:paddingBottom="@dimen/dpPaddingSubItem">
                <ImageView
                    android:layout_width="@dimen/dpSizeIcon"
                    android:layout_height="@dimen/dpSizeIcon"
                    android:src="@drawable/ic_person"/>

                <TextView
                    android:id="@+id/txtNombreP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dpPaddingItem"
                    android:text="Darling Buenaño" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingTop="@dimen/dpPaddingSubItem"
                android:paddingBottom="@dimen/dpPaddingSubItem">
                <ImageView
                    android:layout_width="@dimen/dpSizeIcon"
                    android:layout_height="@dimen/dpSizeIcon"
                    android:src="@drawable/ic_gender"/>

                <TextView
                    android:id="@+id/txtGeneroP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dpPaddingItem"
                    android:text="Masculino" />
            </LinearLayout>
        </LinearLayout>
        <ImageButton
            android:id="@+id/btnIrInformUsu_actConfiguracion"
            android:layout_width="26dp"
            android:layout_height="55dp"
            android:background="@color/app_item"
            android:src="@drawable/ic_siguiente"/>
    </LinearLayout>

</LinearLayout>